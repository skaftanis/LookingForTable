<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:fillViewport="true"
    android:layout_height="fill_parent" >



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.smyc.kaftanis.lookingfortable.InfosActivity"
        android:background="#f2f6fa">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/textView3"
                android:layout_marginTop="150dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal|top"
                android:id="@+id/imageView1"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/textView3" />




            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="MAP"
                android:id="@+id/button"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/more"
                android:layout_toRightOf="@+id/more" />

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="SET"
                android:id="@+id/button2"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/more"
                android:layout_toLeftOf="@+id/more" />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="DETAILS"
            android:id="@+id/more"
            android:layout_alignTop="@+id/button2"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/imageView4"
            android:background="@drawable/square"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:alpha="0.7" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/range"
            android:textColor="#fdfdfd"
            android:singleLine="true"
            android:textSize="28dp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignTop="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignRight="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:layout_below="@+id/imageView4"
            android:background="#f2f6fa"
            android:layout_above="@+id/button"
            android:layout_marginBottom="0dp"
            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:id="@+id/imageView5"
                android:layout_marginTop="10dp"
                android:background="@drawable/city"
                android:layout_below="@+id/addr"
                android:layout_toRightOf="@+id/button2"
                android:layout_toEndOf="@+id/button2"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/townLabel" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:id="@+id/imageView7"
                android:layout_below="@+id/imageView5"
                android:layout_alignLeft="@+id/imageView5"
                android:layout_alignStart="@+id/imageView5"
                android:background="@drawable/addr"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/AddressLabel" />

            <ImageView
                android:layout_width="31dp"
                android:layout_height="22dp"
                android:id="@+id/imageView8"
                android:layout_below="@+id/imageView7"
                android:layout_alignLeft="@+id/imageView7"
                android:layout_alignStart="@+id/imageView7"
                android:background="@drawable/switcher"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/StatusLabel" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:id="@+id/imageView9"
                android:layout_below="@+id/imageView8"
                android:layout_alignLeft="@+id/imageView8"
                android:layout_alignStart="@+id/imageView8"
                android:background="@drawable/latest"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/LatestUpdateLabel" />

        </LinearLayout>


    </RelativeLayout>


</ScrollView>



